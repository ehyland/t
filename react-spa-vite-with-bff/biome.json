{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noSkippedTests": "error"
      },
      "correctness": {
        "noUnusedImports": "info"
      },
      "complexity": {
        "noForEach": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "formatter": {
    "enabled": false
  },
  "files": {
    "ignore": [
      "tsconfig.*.json",
      "dist/**",
      "build/**",
      "public/entry.worker.js",
      "app/graphql/generated.ts",
      ".vscode/settings.json",
      "package.json",
      "**/generated.ts",
      ".playwright/**"
    ]
  }
}
