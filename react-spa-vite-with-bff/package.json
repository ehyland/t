{
  "name": "vite-spa-with-server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "scripts/dev/serve-dev.sh",
    "start": "node dist/server/index.js",
    "test:e2e": "ENV=dev playwright test",
    "test:e2e:check": "ENV=dev playwright test --reporter list",
    "test": "vitest",
    "test:unit": "vitest",
    "build": "pnpm run '/^build:.*/'",
    "build:server": "vite build --ssr src/server/index.ts --config vite.config.server.ts",
    "build:client": "vite build",
    "test:ci": "CI=true vitest",
    "format": "prettier --check .",
    "lint": "biome check",
    "lint:fix": "biome check --fix --unsafe",
    "typecheck": "tsc",
    "check": "pnpm run '/^(typecheck|lint|format|test:ci|test:e2e:check)$/'",
    "gc": "generate-component"
  },
  "dependencies": {
    "@trpc/server": "^10.44.1",
    "close-with-grace": "^2.1.0",
    "dayjs": "^1.11.13",
    "debug": "^4.3.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@bad-hacking/generate-component": "^0.3.2",
    "@bad-hacking/tanstack-store-extensions": "^0.0.5",
    "@biomejs/biome": "^1.9.4",
    "@ladle/react": "^4.1.2",
    "@playwright/test": "^1.48.1",
    "@tabler/icons-react": "3.17.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@trpc/client": "^10.45.2",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.7",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "express": "^4.18.2",
    "immer": "^10.1.1",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-aria-components": "^1.4.1",
    "react-dom": "^18.3.1",
    "remeda": "^2.15.2",
    "tailwindcss": "^3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-react-aria-components": "^1.1.6",
    "tiny-invariant": "^1.3.3",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.9",
    "vite-env-only": "^3.0.3",
    "vite-plugin-pwa": "^0.20.5",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.3",
    "wait-port": "^1.1.0",
    "workbox-build": "^7.1.1"
  },
  "packageManager": "pnpm@9.12.2"
}
